<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%- title %></title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/dist/css/font-awesome.min.css">
    <link rel="stylesheet" href="/dist/css/ionicons.min.css">
    <link rel="stylesheet" href="/dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="/dist/css/skins/_all-skins.min.css">
    <link rel="stylesheet" href="/dist/css/pnotify.custom.min.css">
    <link rel="stylesheet" href="/style/team.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script>
        var host = '<%- host %>';
        var port = <%- port %>;
        var ticketApi = '<%- ticket_api %>';
        var ticketSite = '<%- ticket_site %>';
    </script>
    <script src="/js/socket-io/socket.io-1.7.4.min.js"></script>
    <script src="/js/jquery/jquery.min.js"></script>
    <script src="/js/angular/angular.min.js"></script>
    <script src="/js/controllers/system.js?v=<%- version %>"></script>
    <script src="/js/controllers/base-controller.js?v=<%- version %>"></script>
    <script src="/js/controllers/team-controller.js?v=<%- version %>"></script>
</head>
<body class="hold-transition skin-blue sidebar-mini fixed" ng-app="system">
<div class="wrapper">
    <div class="row" ng-controller="TeamController" ng-cloak>
        <div class="col-xs-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="tasks" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th># Tasks</th>
                            <th>Estimated time</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody ng-repeat="e in tasks">
                            <tr>
                                <td><a class="ticket-title" href="{{ goTicket(e.id) }}" target="_blank">#{{$index + 1}} {{ e.name }}</a></td>
                                <td>
                                    <input type="number" id="task_{{ $index + 1 }}" data-parent-id="{{ $index + 1 }}" class="estimated-value" ng-model="e.value" my-enter="addTask()" my-tab />
                                    <button type="button" class="btn btn-warning btn-sm" ng-click="addChildTask(e, $index + 1)" style="margin-left: 20px">
                                        <i class="fa fa-plus"></i>
                                        Task
                                    </button>
                                    <button type="button" ng-show="e.childs.length" class="btn btn-default btn-sm" ng-click="removeChildTask(e, $index + 1)">
                                        <i class="fa fa-minus"></i>
                                        Delete
                                    </button>
                                </td>
                                <td>
                                </td>
                            </tr>
                            <tr ng-repeat="child in e.childs">
                                <td>|__<strong>{{($parent.$index + 1)  + '.' + ($index + 1)}}:</strong> {{ child.name }}</td>
                                <td>
                                    <input id="task_{{ $parent.$index + 1 }}_{{ $index + 1 }}" data-parent-id="{{ $parent.$index + 1 }}" type="number" class="estimated-value" ng-model="child.value" my-enter="addChildTask(e, $parent.$index + 1)" my-tab ng-change="changeChildValue(e)" style="margin-left: 30px; width: 145px;"/>
                                </td>
                                <td>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                        <tr>
                            <th>Total {{tasks.length}} task(s)</th>
                            <th>Total {{calculateEstimatedTime()}} hour(s)</th>
                            <th>
                            <span>
                                <button type="button" class="btn btn-success" ng-click="addTask()">
                                    <i class="fa fa-plus"></i>
                                    Task
                                </button>
                                <button type="button" class="btn btn-danger" ng-click="removeTask()">
                                    <i class="fa fa-minus"></i>
                                    Remove
                                </button>
                                <button type="button" class="btn btn-info" ng-click="submit(false)">
                                    <i class="fa fa-check"></i>
                                    Submit
                                </button>
                            </span>
                            </th>
                        </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
</body>
<script type="text/javascript">
    window.onbeforeunload = function (e) {
        e = e || window.event;

        // For IE and Firefox prior to version 4
        if (e) {
            e.returnValue = 'Sure?';
        }

        // For Safari
        return 'Sure?';
    };
</script>
</html>
